apiVersion: v1
kind: Secret
metadata:
  name: tweetcordbot-secrets
  namespace: default  # Change to your namespace
type: Opaque
stringData:
  bearer-token: "YOUR_TWITTER_BEARER_TOKEN_HERE"
  twitter-username: "YOUR_TWITTER_USERNAME_HERE"
  discord-webhook-url: "YOUR_DISCORD_WEBHOOK_URL_HERE"

---
# Alternative: Create from command line (recommended for security)
# kubectl create secret generic tweetcordbot-secrets \
#   --from-literal=bearer-token="YOUR_TOKEN" \
#   --from-literal=twitter-username="YOUR_USERNAME" \
#   --from-literal=discord-webhook-url="YOUR_WEBHOOK_URL" \
#   --namespace=default
